.split-screen {
  overflow: hidden;
  
  .left {
    float: left;
    width: 500px;
  }
  .right {
    margin-left:516px;
  }
}

#features {
  border: 1px solid #ccc;
//  background-color: #efefef;
  margin-bottom: 2em;
  padding: 6px 8px;
  height: 400px;
  overflow: scroll;
}

a.scenario-steps-link {
  &.natural {
    background-color: transparent;
//  border-width: 0 0 1px 0;
//  border-style: dotted;
//  padding-bottom: 0;
    
    &:hover {
      color: #446088;
      border-color: #446088;
    }
  }
  
  &.selected {
    background-color: #446088 !important;
    color: white              !important;
//  border-style: none        !important;
//  padding-bottom: 1px       !important;
  }
}

.tree {
  margin: 0;
  padding: 0;
  
  > li {
    list-style: none;
    background-image: url('<%= asset_path("tree-expanded.png") %>');
    background-repeat: no-repeat;
    background-position: 0px 4px;
    padding: 1px 0 1px 16px;
    margin: 0;
    cursor: pointer;
  }
  
  > li.collapsed {
    background-image: url('<%= asset_path("tree-collapsed.png") %>');
    > ul { display: none; }
  }
}

.feature > .caption {
//  display: inline-block;
//  border-radius: 2px;
//  background-color: #d4d4d4;
//  color: black;
//  padding: .5px 4px;
  color: #555;
  font-weight: bold;
}

.scenarios {
  margin: 0;
  padding: 0;
}

.scenario {
  list-style: none;
  margin: 0;
  padding: 1px 0 1px 16px;
  background-repeat: no-repeat;
  background-position: 0px 4px;
  
  &.unknown   .scenario-steps-link { color:#ccc;    border-color:#ccc;}
  &.passed    .scenario-steps-link { color:green;   border-color:green; }
  &.failed    .scenario-steps-link { color:red;     border-color:red; }
  &.undefined .scenario-steps-link { color:#D8D000; border-color:#D8D000; }
  
  .icon {
    margin-left: 4px;
    position: relative;
    top: 2px;
  }
  
//  &.tag-human {
//    background-image: url('<%= asset_path("icons/user.png") %>');
//  }
}

.scenario-steps {
  background-color: #eee;
  padding: 12px 16px;
  
  h4 {
    color: auto;
    margin: 0 0 0.5em 0;
    padding: 0;
  }
  
  em {
    font-style: normal;
    font-weight: bold;
  }
  
  .scenario-step-term {
    color: #a0a0a0;
  }
  
  ul {
    margin: 0;
//    padding: 0 0 0 32px;
    padding: 0;
    color: #555;
    
    > li {
      list-style: none;
//      list-style: square;
      margin: 2px 0;

    }
  }
}

.scenario-tag {
  padding: 0 0 0 22px;
  background-repeat: no-repeat;
  background-position: 0px 0px;
  
  &.tag-human { background-image: url('<%= asset_path("icons/user.png") %>'); }
  &.tag-javascript { background-image: url('<%= asset_path("icons/script_code.png") %>'); }
  
}