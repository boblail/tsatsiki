//$link-highlight: #446088;
$link-highlight: #4be;

.split-screen {
  overflow: hidden;
  
  .left {
    float: left;
    width: 500px;
  }
  .right {
    margin-left:516px;
  }
}

#features {
  border: 1px solid #ccc;
//  background-color: #efefef;
  margin-bottom: 2em;
  padding: 6px 8px;
  height: 400px;
  overflow: scroll;
}

#run_examples { display: none; }

a.scenario-steps-link {
  
  &.natural {
    background-color: transparent;
//  border-width: 0 0 1px 0;
//  border-style: dotted;
//  padding-bottom: 0;
    
    &:hover {
      color: $link-highlight;
      border-color: $link-highlight;
    }
  }
  
  &.selected {
    background-color: $link-highlight !important;
    color: white              !important;
//  border-style: none        !important;
//  padding-bottom: 1px       !important;
  }
}

.tree {
  margin: 0;
  padding: 0;
  
  > li {
    list-style: none;
    background-image: url('<%= "#{Rails.configuration.try(:relative_url_root)}#{asset_path("tree-expanded.png")}" %>');
    background-repeat: no-repeat;
    background-position: 0px 5px;
    padding: 1px 0 1px 14px;
    margin: 0;
    cursor: pointer;
  }
  
  > li.collapsed {
    background-image: url('<%= "#{Rails.configuration.try(:relative_url_root)}#{asset_path("tree-collapsed.png")}" %>');
    background-position: 1px 5px;
    > ul { display: none; }
    > .caption {
      background-color: transparent;
      color: #999; }
  }
}

.feature > .caption {
  display: inline-block;
  border-radius: 2px;
  background-color: #c4c4c4;
  color: white;
  padding: 2px 4px;
  line-height: 1.15em;
  font-weight: bold;
  font-size: 0.75em;
}

.scenarios {
  margin: 3px 0 0 0;
  padding: 0;
}

.scenario {
  list-style: none;
  margin: 0;
  padding: 1px 0 1px 16px;
  background-repeat: no-repeat;
  background-position: 0px 4px;
  
  &.unknown   .scenario-steps-link { color: #000;    border-color: #000;}
  &.passed    .scenario-steps-link { color: green;   border-color: green; }
  &.failed    .scenario-steps-link { color: red;     border-color: red; }
  &.undefined .scenario-steps-link { color: #D8D000; border-color: #D8D000; }
  
  .icon {
    margin-left: 4px;
    position: relative;
    top: 2px;
  }
  
//  &.tag-human {
//    background-image: url('<%= "#{Rails.configuration.try(:relative_url_root)}#{asset_path("icons/user.png")}" %>');
//  }
}

.scenario-steps {
  background-color: #eee;
  padding: 12px 16px;
  
  h4 {
    color: auto;
    margin: 0 0 0.5em 0;
    padding: 0;
  }
  
  em {
    font-style: normal;
    font-weight: bold;
  }
  
  .scenario-step-term {
//    color: #a0a0a0;
    background-color: #dfdfdf;
    border-radius: 2px;
    line-height: 1em;
    padding: 2px 5px 2px 4px;
    display: inline-block;
  }
  
  ul {
    margin: 0;
//    padding: 0 0 0 32px;
    padding: 0;
    color: #333;
    
    > li {
      list-style: none;
//      list-style: square;
      margin: 2px 0;

    }
  }
}

input[type="text"].renamer {
  font-size: 1em;
  width: 300px;
}

.scenario-tag {
  padding: 0 0 0 22px;
  background-repeat: no-repeat;
  background-position: 0px 0px;
  
  &.tag-human { background-image: url('<%= "#{Rails.configuration.try(:relative_url_root)}#{asset_path("icons/user.png")}" %>'); }
  &.tag-javascript { background-image: url('<%= "#{Rails.configuration.try(:relative_url_root)}#{asset_path("icons/script_code.png")}" %>'); }
  &.tag-todo { background-image: url('<%= "#{Rails.configuration.try(:relative_url_root)}#{asset_path("icons/page_edit.png")}" %>'); }
}

table.step-table {
  margin: 8px 0 8px 14px;
  border-collapse: collapse;
  color: #555;
  
  th { background-color: #dfdfdf; }
  td { background-color: #f2f2f2; }
  td, th {
    border: 1px solid #cccccc;
    padding: 2px 6px; }
  
}