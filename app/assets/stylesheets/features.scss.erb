$link-highlight: #beeb8b;
$link-selected: #5bc350;
$control-border: 1px solid #e0e0e0;
$control-padding: 6px 8px;
$accent-color: #d37122;


textarea {
  border: $control-border;
  padding: $control-padding;
}
input[type="text"] { border: $control-border; }

.split-screen {
  .left {
    position: fixed;
    left: 16px;
    top: 84px;
    bottom: 0;
    width: 500px;
    padding: 1em 16px 0 0;
    border-right: 3px solid #efefef;
  }
  .right {
    padding-top: 1em;
    margin-left: 516px;
    padding-left: 16px;
  }
}

#features {
  border: $control-border;
  padding: $control-padding;
  overflow-y: scroll;
  position: absolute;
  left: 0;
  right: 16px;
  top: 72px;
  bottom: 16px;
}

#run_examples { display: none; }

a.scenario-steps-link {
  background-color: transparent;
  
  &:hover { color: white !important; }
  &.selected {
    background-color: $link-selected !important;
    color: white !important;
  }
}

.tree {
  margin: 0;
  padding: 0;
  
  > li {
    list-style: none;
    background-image: url('<%= "#{Rails.configuration.try(:relative_url_root)}#{asset_path("tree-expanded.png")}" %>');
    background-repeat: no-repeat;
    background-position: 0px 5px;
    padding: 1px 0 1px 14px;
    margin: 0;
    cursor: pointer;
  }
  
  > li.collapsed {
    background-image: url('<%= "#{Rails.configuration.try(:relative_url_root)}#{asset_path("tree-collapsed.png")}" %>');
    background-position: 1px 5px;
    > ul { display: none; }
    > .caption {
      background-color: transparent;
      color: #999; }
  }
}

.feature > .caption {
  display: inline-block;
  border-radius: 2px;
  background-color: #656565;
  color: white;
}

.feature > .caption,
a.feature-new-scenario {
  padding: 2px 4px;
  line-height: 1.15em;
  font-weight: bold;
  font-size: 0.75em;
}

.scenarios {
  margin: 3px 0 0 0;
  padding: 0;
}

.scenario {
  list-style: none;
  margin: 0;
  padding: 1px 0 1px 16px;
  background-repeat: no-repeat;
  background-position: 0px 4px;
  
  &.unknown   .scenario-steps-link { color: #000;    border-color: #000;}
  &.passed    .scenario-steps-link { color: green;   border-color: green; }
  &.failed    .scenario-steps-link { color: red;     border-color: red; }
  &.undefined .scenario-steps-link { color: #D8D000; border-color: #D8D000; }
  
  .icon {
    margin-left: 4px;
    position: relative;
    top: 2px;
  }
  
//  &.tag-human {
//    background-image: url('<%= "#{Rails.configuration.try(:relative_url_root)}#{asset_path("icons/user.png")}" %>');
//  }
}

.scenario-steps {
  
  h4 {
    color: auto;
    margin: 0 0 0.5em 0;
    padding: 0;
  }
  
  em {
    font-style: normal;
    font-weight: bold;
  }
  
  .scenario-step-term {
//    color: #a0a0a0;
    background-color: #dfdfdf;
    border-radius: 2px;
    line-height: 1em;
    padding: 2px 5px 2px 4px;
    display: inline-block;
  }
  
  ul {
    margin: 0;
//    padding: 0 0 0 32px;
    padding: 0;
    color: #333;
    
    > li {
      list-style: none;
//      list-style: square;
      margin: 2px 0;

    }
  }
  
  textarea {
    width: 500px;
    min-height: 300px;
    font-size: 1em;
    font-family: 'Consolas', 'Courier New', fixed;
  }
  
}

input[type="text"].renamer {
  font-size: 1em;
  width: 300px;
}

.scenario-tag {
  padding: 0 0 0 22px;
  background-repeat: no-repeat;
  background-position: 0px 0px;
  
  &.tag-human { background-image: url('<%= "#{Rails.configuration.try(:relative_url_root)}#{asset_path("icons/user.png")}" %>'); }
  &.tag-javascript { background-image: url('<%= "#{Rails.configuration.try(:relative_url_root)}#{asset_path("icons/script_code.png")}" %>'); }
  &.tag-wip,
  &.tag-todo { background-image: url('<%= "#{Rails.configuration.try(:relative_url_root)}#{asset_path("icons/page_white_edit.png")}" %>'); }
  &.tag-new { background-image: url('<%= "#{Rails.configuration.try(:relative_url_root)}#{asset_path("icons/page_white.png")}" %>'); }
}

table.step-table {
  margin: 8px 0 8px 14px;
  border-collapse: collapse;
  color: #555;
  
  th { background-color: #dfdfdf; }
  td { background-color: #f2f2f2; }
  td, th {
    border: 1px solid #cccccc;
    padding: 2px 6px; }
  
}

pre.step-heredoc {
  margin: 8px 0;
  color: #555;
}

.scenario-title h3 { display: inline-block; }

form .scenario-title h3 {
  margin: 0.75em 0 0.5em;
  
  input {
    font-family: 'PT Sans', sans-serif;
    font-size: 1em;
  }
}

#scenario_body {
  white-space: pre;
  overflow: auto;
}

a.feature-new-scenario.on {
  background-color: $accent-color;
  color: white;
}

.new-feature-placeholder {
  background-color: $accent-color;
  color: white;
  
  margin: 1px 0 1px 16px;
  border-radius: 2px;
  display: inline-block;
  padding: 2px 6px 2px 4px;
  line-height: 1em;
}

table.stats {
  font-family: 'PT Sans', sans-serif;
  border-collapse: collapse;
  position: relative;
  top: 2px;
}

table.stats td {
  font-weight: normal;
  font-size: 2em;
  text-align: right;
  padding: 0 16px 0 0;
  line-height: 0.8em;
}

table.stats th {
  font-weight: normal;
  padding: 0 16px 0 0;
}
 